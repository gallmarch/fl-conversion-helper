{
  "manifest_version": 2,
  "name": "Fallen London Conversion Helper",
  "description": "This extension for Fallen London adds categories of convertible items to your inventory.",
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "webRequest",
    "storage",
    "*://*.fallenlondon.com/"
  ],
  "version": "$VERSION",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://fallenlondon.storynexus.com/Gap/Load*",
        "https://fallenlondon.com/*",
        "https://*.fallenlondon.com/*",
        "http://localhost:3000/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ]
}
